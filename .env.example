# Creatio Environment Configuration
# Copy this file to .env and customize for your setup

# Server Configuration
PORT=3000
NODE_ENV=development

# Creatio Development Environment
CREATIO_DEV_URL=https://dev.yourcompany.creatio.com
CREATIO_DEV_LOGIN=admin@dev.creatio.com

# Creatio Test Environment
CREATIO_TEST_URL=https://test.yourcompany.creatio.com
CREATIO_TEST_LOGIN=admin@test.creatio.com

# Creatio Staging Environment
CREATIO_STAGING_URL=https://staging.yourcompany.creatio.com
CREATIO_STAGING_LOGIN=admin@staging.creatio.com

# Creatio Production Environment
CREATIO_PROD_URL=https://yourcompany.creatio.com
CREATIO_PROD_LOGIN=admin@yourcompany.creatio.com

# CORS Settings
CORS_ORIGIN=*

# Logging Level
LOG_LEVEL=info

# Mock Data (set to false to use real Clio commands)
MOCK_DATA_ENABLED=true
